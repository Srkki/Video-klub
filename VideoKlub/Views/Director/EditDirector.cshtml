@model Director

<form asp-controller="director" asp-action="SaveEditDirector" method="POST" class="my-1">
    <div class="row mb-1 justify-content-md-center">
        <div class="col-1">
            <label asp-for="@Model.FirstName"></label>
        </div>
        <div class="col-4">
            <input asp-for="@Model.FirstName" type="text" class="form-control" value="@Model.FirstName" />
            <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-1 justify-content-md-center">
        <div class="col-1">
            <label asp-for="@Model.LastName"></label>
        </div>
        <div class="col-4">
            <input asp-for="@Model.LastName" type="text" class="form-control" value="@Model.LastName" />
            <span asp-validation-for="@Model.LastName" class="text-danger"></span>
        </div>
        <input asp-for="@Model.DirectorId" type="hidden" value="@Model.DirectorId" />
    </div>
    <div class="row mb-1 justify-content-md-center">

        <input type="submit" class="btn btn-info custom_btn" value="Save" />
    </div>
</form>
<div class="d-flex justify-content-center">
    <div>

        <a asp-controller="home" asp-action="add" class="btn btn-primary custom_btn m-2">Cancel</a>

    </div>
    <div>

        <form asp-controller="home" asp-action="DeleteDirector" method="POST">
            <input asp-for="@Model.DirectorId" value="@Model.DirectorId" type="hidden" />
            <input type="submit" class="btn btn-danger custom_btn m-2" value="Delete" />
        </form>
    </div>
</div>